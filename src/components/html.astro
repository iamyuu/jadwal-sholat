---
import '../styles/global.css';
import { seo } from '../constants';
import { pwaInfo } from 'virtual:pwa-info';

Object.assign(seo, {
	url: Astro.url.toString(),
	image: `${Astro.url.toString()}${seo.image}`,
});
---

<!doctype html>
<html lang={seo.locale}>
	<head>
		<meta charset='utf-8' />
		<meta name='viewport' content='width=device-width' />
		<meta name='robots' content='index, follow, notranslate' />
		<link rel='sitemap' href='/sitemap-index.xml' />
		<meta name='msapplication-TileColor' content='hsl(175, 13%, 32%)' />
		<meta name='theme-color' content='hsl(175, 13%, 32%)' />

		{pwaInfo ? <Fragment set:html={pwaInfo.webManifest.linkTag} /> : null}
		<link rel='shortcut icon' type='image/x-icon' href='/icons/favicon.ico' sizes='any' />
		<link rel='apple-touch-icon' href='/icons/apple-touch-icon.png' />
		<link rel='image' type='image/svg+xml' href='/sprite.svg' />

		<title>{seo.title}</title>
		<link rel='canonical' href={seo.url} />
		<meta name='description' content={seo.description} />
		<meta name='keywords' content={seo.keywords} />
		<meta name='author' content={seo.author} />

		<meta property='og:type' content='website' />
		<meta property='og:title' content={seo.title} />
		<meta property='og:description' content={seo.description} />
		<meta property='og:locale' content={seo.locale} />
		<meta property='og:image' content={seo.image} />
		<meta property='og:image:alt' content={seo.imageAlt} />
		<meta property='og:url' content={seo.url} />

		<meta name='twitter:card' content='app' />
		<meta name='twitter:creator' content={seo.creator} />
		<meta name='twitter:title' content={seo.title} />
		<meta name='twitter:image' content={seo.image} />
		<meta name='twitter:image:alt' content={seo.imageAlt} />
		<meta name='twitter:description' content={seo.description} />
	</head>
	<body class='bg-background text-paragpraph font-sans'>
		<main class='container mx-auto pt-24 px-4 max-w-xl'>
			<slot />
		</main>
		<footer class='text-center'>
			<small>
				Punya saran? Masukkan di <a href='https://github.com/iamyuu/jadwalsholat/issues/new' target='_blank' rel='noopener noreferrer' class='underline'>sini</a>
			</small>
		</footer>
		<slot name='script' />
	</body>
</html>
